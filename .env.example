# Google Sheets API Configuration
# Get these credentials from Google Cloud Console (https://console.cloud.google.com)
# Enable Google Sheets API and create OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Google Sheet ID containing friend data
# Extract from your Google Sheets URL: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Database Configuration
# Path to SQLite database file (relative to project root)
DATABASE_PATH=./data/birthday_messenger.db

# Logging Configuration
# Log level: info, error, critical
LOG_LEVEL=info
# Log file path (leave empty for console-only logging)
LOG_FILE_PATH=./logs/birthday_messenger.log

# Scheduler Configuration
# Cron expression for daily execution (default: 4:00 AM IST)
# Format: minute hour day month dayOfWeek
CRON_SCHEDULE=0 4 * * *
# Timezone for scheduler (default: Asia/Kolkata for IST)
SCHEDULER_TIMEZONE=Asia/Kolkata

# WhatsApp Configuration
# Session data directory for WhatsApp authentication
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# Retry Configuration
# Number of retry attempts for ChatGPT API calls
CHATGPT_MAX_RETRIES=3
# Number of retry attempts for WhatsApp message delivery
WHATSAPP_MAX_RETRIES=3
# Retry interval in minutes for WhatsApp delivery
WHATSAPP_RETRY_INTERVAL_MINUTES=5

# Notification Configuration (Optional)
# Email for critical error notifications (leave empty to disable)
NOTIFICATION_EMAIL=
# SMTP configuration for email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
