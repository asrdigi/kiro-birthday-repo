# Google Sheets API (Service Account Method - Recommended)
# Get these from Google Cloud Console ‚Üí Service Account ‚Üí JSON key file
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n

# OpenAI API Key (Required for AI message generation)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Google Sheet ID (Required)
# Extract from your Google Sheet URL: https://docs.google.com/spreadsheets/d/SHEET_ID_HERE/edit
GOOGLE_SHEET_ID=your-google-sheet-id-here

# WhatsApp Configuration
# Set to 'false' for real WhatsApp messages, 'true' for testing (simulates sending)
WHATSAPP_TEST_MODE=false

# Twilio WhatsApp API Configuration (Required for cloud deployment)
# Get these from: https://console.twilio.com/
# Account SID - starts with "AC" (32 characters)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Auth Token - your Twilio authentication token
TWILIO_AUTH_TOKEN=your_auth_token_here

# Sender WhatsApp number - must include "whatsapp:" prefix
# Sandbox: whatsapp:+14155238886
# Production: whatsapp:+1234567890 (your verified Twilio number)
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Sandbox Mode - set to 'true' for testing with Twilio sandbox
# Set to 'false' for production with verified Twilio number
TWILIO_SANDBOX_MODE=false

# Complete Test Mode (for development only)
# Set to 'false' for production use
COMPLETE_TEST_MODE=false

# Scheduler Configuration
# Daily execution at 4:00 AM IST (Indian Standard Time)
CRON_SCHEDULE=0 4 * * *
SCHEDULER_TIMEZONE=Asia/Kolkata

# Message Customization
# Your name to appear at the end of birthday messages (e.g., "- Srinivas")
SENDER_NAME=Your Name

# Message style (optional): casual, warm, friendly, short
# casual = Simple, everyday language (default)
# warm = Slightly more affectionate
# friendly = Upbeat and cheerful
# short = Very brief, 1-2 sentences
MESSAGE_STYLE=casual

# Include emojis in birthday messages (optional)
# true = Include 2-3 birthday emojis (üéÇ, üéâ, üéä, üéà, üéÅ, ‚ú®) in messages
# false = Plain text messages without emojis
USE_EMOJIS=true

# Optional: Database path (defaults to ./data/birthday_messenger.db)
# DATABASE_PATH=./data/birthday_messenger.db

# Optional: Logging configuration
# LOG_LEVEL=info